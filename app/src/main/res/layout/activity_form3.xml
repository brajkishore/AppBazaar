<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="appbazaar.com.appbazaar.activities.Form3Activity"
    android:background="@color/teal500"
    android:id="@+id/form3"
    >

    <TextView
        android:id="@+id/form3Header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Enter your mobile number"
        android:textAllCaps="false"
        android:textSize="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_below="@+id/form3Header_tv"
        android:id="@+id/form3Info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tealA100"
        android:text="Enter your mobile number"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/form3Icon_iv"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/form3Info_tv"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/teal50"
        />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/form3Input"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/form3Icon_iv"
        android:background="@color/teal200"
        android:layout_marginTop="20dp"
        >

        <EditText
            android:id="@+id/form3Mobile_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:hint="Mobile Number"
            android:textAllCaps="false"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:gravity="left|bottom"
            android:textColorHint="@android:color/white"
            android:paddingBottom="20dp"

            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/form3Next_btn"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/form3Input"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:text="Next"
        android:textAlignment="center"
        android:textColor="@color/teal700"
        android:clickable="true"
        android:theme="@style/myButtonTheme"

        />

</RelativeLayout>
