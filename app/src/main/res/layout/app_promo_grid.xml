<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/app_bar_main"
tools:context=".MainActivity">


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    card_view:cardCornerRadius="4dp"
    android:background="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:clickable="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/promo_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimaryDark"
            android:padding="5dp"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/promoName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/promo_iv"
            android:textColor="@android:color/darker_gray"
            android:text="Prommo Name"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/promoBriefInfo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/promo_iv"
            android:layout_below="@+id/promoName_tv"
            android:textColor="@android:color/darker_gray"
            android:text="Prommo Brief"
            />

        <TextView
            android:id="@+id/promoPrice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/darker_gray"
            android:text="Prommo Price"
            />

    </RelativeLayout>


</android.support.v7.widget.CardView>

</RelativeLayout>
